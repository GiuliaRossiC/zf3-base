{
  "name" : "realejo/zf3-base",
  "description" : "Biblioteca com models comuns utilizados nos projetos ZF3.",
  "type" : "library",
  "homepage" : "http://realejo.com.br",
  "license" : "BSD-3-Clause",
  "keywords" : [ "framework", "zf3", "realejo" ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require" : {
    "php" : "~5.6 || ~7.0 || ~7.1",
    "zendframework/zend-db" : "^2.8.1",
    "zendframework/zend-cache": "^2.7.1",
    "zendframework/zend-paginator": "^2.7.0",
    "zendframework/zend-json": "~2.6 || ~3.0",
    "zendframework/zend-serializer": "^2.8.0",
    "zendframework/zend-mail": "^2.7.2",
    "zendframework/zend-hydrator": "~2.2.1"
  },
  "require-dev" : {
    "squizlabs/php_codesniffer": "^2.8",
    "phpunit/PHPUnit" : "~5.7",
    "zendframework/zend-dom": "~2.6.0"
  },
  "autoload" : {
    "psr-4" : {
      "Realejo\\" : "src/"
    }
  },
  "autoload-dev" : {
    "psr-4" : {
      "RealejoTest\\" : "test/src"
    }
  },
  "scripts": {
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit"
  }
}
